@model List<UsersInRoleViewModel>
@{
    ViewData["Title"] = "Update users in role";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutDashboard.cshtml";
    var roleId = ViewBag.roleId;
}


<form asp-controller="Admin" asp-area="Admin" asp-action="UpdateUsersInRole" class="form-horozontal" method="post">
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Lastname</th>
                <th scope="col">Check box</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@Model[i].UserName </td>
                    <td>@Model[i].Name </td>
                    <td>@Model[i].Surname </td>
                    <td>@Model[i].LastName </td>
                    <td>

                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].Id" />
                            <input type="hidden" asp-for="@Model[i].UserName" />
                            <input type="hidden" asp-for="@Model[i].Name" />
                            <input type="hidden" asp-for="@Model[i].LastName" />
                            <input type="hidden" asp-for="@Model[i].Surname" />
                            <input type="hidden" asp-for="@Model[i].AppUserId" />
                            <div class="checkbox">
                                <label asp-for="@Model[i].IsSelected">
                                    <input asp-for="@Model[i].IsSelected" />
                                    Add to role
                                </label>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group row">
        <div class="col-sm-10">
            <input class="btn btn-success" type="submit" asp-route-roleId="@roleId" value="Confirm" />
            <a class="btn btn-dark" asp-controller="Admin" asp-area="Admin" asp-action="GetAllRoles"> Cancel</a>
        </div>
    </div>
</form>



