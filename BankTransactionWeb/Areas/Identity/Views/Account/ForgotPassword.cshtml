@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";//styelForRegister
}

<div class="container">

    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-password-image">
                            @*<img src="https://cdn3.vectorstock.com/i/1000x1000/65/42/forgot-lock-office-password-icon-vector-20106542.jpg" />*@
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
                                    <p class="mb-4">We get it, stuff happens. Just enter your email address below and we'll send you a link to reset your password!</p>
                                </div>
                                <form class="user" asp-action="ForgotPassword" asp-controller="Account" asp-area="Identity">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <input asp-for="Email" type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address..." />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Reset Password" />
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" asp-controller="Account" asp-area="Identity" asp-action="Register">Create an Account!</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" asp-controller="Account" asp-area="Identity" asp-action="Login">Already have an account? Login!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

