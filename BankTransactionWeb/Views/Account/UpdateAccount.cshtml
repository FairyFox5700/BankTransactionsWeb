@model BankTransaction.Web.ViewModel.UpdateAccountViewModel
@{
    ViewData["Title"] = "UpdateAccount";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutDashboard.cshtml";
    }
}


    <form asp-controller="Account" asp-action="UpdateAccount" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
        <div class="form-group row ">
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-contol" />
            </div>
        </div>
        <div class="form-group row ">
            <label class="col-sm-2 col-form-label">Update account for</label>
            <label class="col-sm-2 col-form-label">@Model.Person?.Name @Model.Person?.LastName @Model.Person?.Surname</label>
            <input asp-for="PersonId" hidden />
        </div>
        <div class="form-group row ">
            <label asp-for="Number" class="col-sm-2 col-form-label"></label>
            <div class="form-group">
                <input asp-for="Number" class="form-control" placeholder="Account number *" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row ">
            <label asp-for="Balance" class="col-sm-2 col-form-label"></label>
            <div class="form-group">
                <input asp-for="Balance" class="form-control" placeholder="Balance *" value="" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
        </div>
        <@*div class="form-group row ">
            <label asp-for="PersonId" class="col-sm-2 col-form-label">Person</label>
            <div class="col-sm-5">
                <select asp-for="PersonId" class="form-control" asp-items="@Model.People">
                    <option>Please select company</option>
                </select>
            </div>
        </div>*@
        <div class="form-group row">
            <div class="col-sm-10">
                <input class="btn btn-success" type="submit" asp-controller="Account" asp-action="UpdateAccount" value="Confirm" />
                <a asp-controller="Account" asp-action="GetAllAccounts" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
