@model BankTransactionWeb.ViewModel.UpdateCompanyViewModel
@{
    ViewData["Title"] = "UpdateCompany";
}
    <form asp-controller="Company" asp-action="UpdateCompany" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
        <div class="form-group row ">
            <div class="col-sm-10">
                <div class="input-group">
                    <input asp-for="Id" type="hidden" class="form-contol" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-contol" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DateOfCreation" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DateOfCreation" class="form-contol" />
                <span asp-validation-for="DateOfCreation" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <input class="btn-success" type="submit" asp-action="UpdateCompany" asp-controller="Company" value="Confirm" />
                <a asp-action="GetAllCompanies" asp-controller="Company" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>