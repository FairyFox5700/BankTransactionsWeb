@model BankTransactionWeb.ViewModel.UpdateCompanyViewModel
@{
    ViewData["Title"] = "Update company";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutDashboard.cshtml";
}
<head>
    <link href="~/css/StyleSheet1.css" rel="stylesheet" />
</head>

<form asp-controller="Company" asp-action="UpdateCompany" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger">  </div>

    <div class="form-group row ">
        <div class="form-group">
            <input asp-for="Id" type="hidden" class="form-contol" />
        </div>
    </div>
    <div class="form-group row ">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="form-group">
            <input type="text" asp-for="Name" class="form-control" placeholder="Company Name *" value="" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row ">
        <label asp-for="DateOfCreation" class="col-sm-2 col-form-label"></label>
        <div class="form-group">
            <input type="date" asp-for="DateOfCreation" class="form-control" placeholder="Date Of Creation *" value="" />
            <span asp-validation-for="DateOfCreation" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input class="btn btn-success" type="submit" asp-action="UpdateCompany" asp-controller="Company" value="Confirm" />
            <a asp-action="GetAllCompanies" asp-controller="Company" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>