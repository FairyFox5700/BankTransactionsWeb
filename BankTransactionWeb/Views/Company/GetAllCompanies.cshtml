@model List<BankTransactionWeb.BAL.Models.CompanyDTO>
@{
    ViewData["Title"] = "GetAllCompanies";
}

<form asp-controller="Company" asp-action="GetAllCompanies" method="get">
    <button class="btn-dark" asp-action="AddCompany"  asp-controller="Company">Add new</button>
    <br />
    <br />
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">DateOfCreation</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i].Name </td>
                    <td>@Model[i].DateOfCreation </td>
                    <td>
                        <button class="btn-primary" asp-action="UpdateCompany" asp-controller="Company" asp-route-id="@Model[i].Id">Update</button>
                        <button class="btn-danger" asp-action="DeleteCompany" asp-controller="Company" asp-route-id="@Model[i].Id">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
