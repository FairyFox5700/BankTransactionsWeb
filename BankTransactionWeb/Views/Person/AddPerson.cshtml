@model BankTransactionWeb.BAL.Models.PersonDTO
@{
    ViewData["Title"] = "AddPerson";
}

<form asp-controller="Person" asp-action="AddPerson" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label" />
        <div class="col-sm-10">
            <input asp-for="Id" class="form-contol" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label" />
        <div class="col-sm-10">
            <input asp-for="Name" class="form-contol" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Surname" class="col-sm-2 col-form-label" />
        <div class="col-sm-10">
            <input asp-for="Surname" class="form-contol" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-sm-2 col-form-label" />
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-contol" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DataOfBirth" class="col-sm-2 col-form-label" />
        <div class="col-sm-10">
            <input type="date" asp-for="DataOfBirth" class="form-contol" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input class="btn-success" type="submit" asp-action="UpdatePerson" asp-controller="Person" value="Confirm" />
        </div>
    </div>
</form>

