@model List<BankTransactionWeb.BAL.Models.PersonDTO>
@{
    ViewData["Title"] = "Add person";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <form asp-controller="Person" asp-action="GetAllPersons" method="get">
    <button class="btn-dark" asp-action="AddPerson" asp-controller="Person">Add new</button>
    <br />
    <br />
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Last name</th>
                <th scope="col">Date of birth</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i].Name </td>
                    <td>@Model[i].Surname </td>
                    <td>@Model[i].LastName</td>
                    <td>@Model[i].DataOfBirth </td>
                    <td>
                        <button class="btn-primary" asp-action="UpdatePerson" asp-controller="Person" asp-route-id="@Model[i].Id">Update</button>
                        <button class="btn-danger" asp-action="DeletePerson" asp-controller="Person" asp-route-id="@Model[i].Id">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
