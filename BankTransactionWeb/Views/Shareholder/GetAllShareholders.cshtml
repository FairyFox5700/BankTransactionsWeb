@model List<BankTransactionWeb.BAL.Models.ShareholderDTO>
@inject BankTransactionWeb.ViewModel.ViewModelFiltering.SearchShareholdersViewModel SearchModel
@{
    ViewData["Title"] = "GetAllShareholders";
}
<form asp-controller="Shareholder" asp-action="GetAllShareholders" method="get">
    <button class="btn-dark" asp-action="AddShareholder" asp-controller="Shareholder">Add new</button>
    <br />
    <br />
    <div class="form-row form-inline">
        <h3> Search by paramaters</h3>
        <label asp-for="@SearchModel.CompanyName" class="col-sm-2 col-form-label"></label>
        <div class="col-6">
            <input asp-for="@SearchModel.CompanyName" class="form-contol" />
        </div>
        <br/>
        <label asp-for="@SearchModel.DateOfCompnayCreation" class="col-sm-2 col-form-label"></label>
        <div class="col-6">
            <input asp-for="@SearchModel.DateOfCompnayCreation" class="form-contol" />
        </div>
    </div>

    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Last name</th>
                <th scope="col">Company name</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i].Person?.Name </td>
                    <td>@Model[i].Person?.Surname </td>
                    <td>@Model[i].Person?.LastName</td>
                    <td>@Model[i].Company?.Name </td>
                    <td>
                        <button class="btn-primary" asp-action="UpdateShareholder" asp-controller="Shareholder" asp-route-id="@Model[i].Id">Update</button>
                        <button class="btn-danger" asp-action="DeleteShareholder" asp-controller="Shareholder" asp-route-id="@Model[i].Id">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

