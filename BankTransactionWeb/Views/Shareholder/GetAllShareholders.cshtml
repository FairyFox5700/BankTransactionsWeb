@model BankTransaction.Web.ViewModel.ShareholdersListViewModel
@{
    ViewData["Title"] = "All shareholders";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutDashboard.cshtml";
    }
}
<form asp-controller="Shareholder" asp-action="GetAllShareholders" method="get">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-6">
                    <h6 class="m-0 font-weight-bold text-primary">All shareholders</h6>
                </div>
                <div class="col-6 ">
                    <button class="btn-dark" asp-action="AddShareholder" asp-controller="Shareholder">Add new</button>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Shareholders.Any())
                {
                    @*<form asp-controller="Shareholder" asp-action="GetAllShareholders" method="get">*@
                    <h3> Search by parameters</h3>
                    <br />
                    <div class="form-row align-items-center">
                        <div class="col-auto my-1">
                            <label asp-for="CompanyName" class="dark control-label"></label>
                            <input asp-for="CompanyName" class="form-contol" placeholder="type company name" />
                        </div>
                        <div class="col-auto my-1">
                            <label asp-for="DateOfCompanyCreation" class="dark control-label"></label>
                            <input asp-for="DateOfCompanyCreation" class="form-contol" placeholder="type date of company creation" />
                        </div>
                        <div class="col-auto my-1">
                            <input type="submit" value="Search" class="btn btn-primary" />
                        </div>
                    </div>
                    <table class="table table-striped table-light">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Surname</th>
                                <th scope="col">Last name</th>
                                <th scope="col">Company name</th>
                                <th scope="col">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Shareholders.Count(); i++)
                            {
                                <tr>
                                    <th scope="row">@(i + 1)</th>
                                    <td>@Model.Shareholders[i].Person?.Name </td>
                                    <td>@Model.Shareholders[i].Person?.Surname </td>
                                    <td>@Model.Shareholders[i].Person?.LastName</td>
                                    <td>@Model.Shareholders[i].Company?.Name </td>
                                    <td>
                                        <button class="btn-primary" asp-action="UpdateShareholder" asp-controller="Shareholder" asp-route-id="@Model.Shareholders[i].Id">Update</button>
                                        <button class="btn-danger" asp-action="DeleteShareholder" asp-controller="Shareholder" asp-route-id="@Model.Shareholders[i].Id">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="card">
                        <div class="card-header">
                            No shareholder created yet
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</form>