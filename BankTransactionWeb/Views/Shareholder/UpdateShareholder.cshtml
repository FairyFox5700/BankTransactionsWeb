@model BankTransaction.Web.ViewModel.UpdateShareholderViewModel
@{
    ViewData["Title"] = "Update shareholder";
    if(User.IsInRole("Admin"))
    {
            Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutDashboard.cshtml";
    }
}


    <form asp-controller="Shareholder" asp-action="UpdateShareholder" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
        <div class="form-group row ">
            <label class="col-sm-2 col-form-label"></label>
            <label class="col-form-label"><span>New account for @Model.Person?.Name @Model.Person?.LastName @Model.Person?.Surname</span></label>
            <input asp-for="PersonId" hidden />
        </div>
        <div class="form-group row ">
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-contol" />
            </div>
        </div>
        <div class="form-group row ">
            <label asp-for="@Model.Company.Name" class="col-sm-2 col-form-label">Company name</label>
            <div class="col-sm-5">
                <select asp-for="CompanyId" class="form-control" asp-items="@Model.Comapnanies">
                    <option>Please select company</option>
                </select>
            </div>
        </div>
        <div class="form-group row ">
            <input asp-for="PersonId" hidden />
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <input class="btn btn-success" type="submit" asp-action="UpdateShareholder" asp-controller="Shareholder" value="Confirm" />
                <a asp-action="GetAllShareholders" asp-controller="Shareholder" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
