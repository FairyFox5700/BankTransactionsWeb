@model BankTransactionWeb.ViewModel.AddShareholderViewModel
@{
    ViewData["Title"] = "AddShareholder";
}

    <form asp-controller="Shareholder" asp-action="AddShareholder" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
        <div class="form-group row">
            <label asp-for="@Model.Company.Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="CompanyId" asp-items="@Model.Comapnanies">
                    <option>Please select company</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Person.Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="PersonId" asp-items="@Model.People">
                    <option>Please select person</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <input class="btn-success" type="submit" asp-action="AddShareholder" asp-controller="Shareholder" value="Confirm" />
                <a asp-action="GetAllShareholders" asp-controller="Shareholder" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>

