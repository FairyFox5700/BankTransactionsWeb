@model BankTransaction.Web.ViewModel.ExecuteTransactionViewModel

@{
    ViewData["Title"] = "ExecuteTransaction";
}
    <div class="col-md-6 offset-md-3">
        <hr class="my-5">

        <!-- form card cc payment -->
        <div class="card card-outline-secondary">
            <div class="card-body">
                <h3 class="text-center">Transafer money</h3>
                <hr>
                <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
                <form class="form" role="form" asp-controller="Transaction" asp-action="ExecuteTransaction" method="post" autocomplete="off">
                    <div class="form-group">
                        <label asp-for="AccountSourceId" class=" col-form-label"></label>
                        <select class="form-control" asp-for="AccountSourceId" asp-items="@Model.Accounts">
                            <option>Please select account source</option>
                        </select>

                    </div>
                    <div class="form-group">
                        <label asp-for="AccountDestinationNumber" class="col-form-label"></label>
                        <input class="form-control" autocomplete="off" maxlength="20" pattern="\d{16}" asp-for="AccountDestinationNumber" class="form-contol" />
                        <span asp-validation-for="AccountDestinationNumber" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <label asp-for="Amount" class="col-md-12 col-form-label"></label>
                    </div>
                    <div class="form-inline">
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text">$</span></div>
                            <input asp-for="Amount" class="form-control text-right" id="exampleInputAmount" placeholder="39" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                            <div class="input-group-append"><span class="input-group-text">$</span></div>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <button type="reset" asp-controller="Home" asp-action="Index" class="btn btn-default btn-lg btn-block">Cancel</button>
                        </div>
                        <div class="col-md-6">
                            <button type="submit"  asp-controller="Transaction" asp-action="ExecuteTransaction" class="btn btn-success btn-lg btn-block">Confirm</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
