@model BankTransactionWeb.ViewModel.UpdateTransactionViewModel
@{
    ViewData["Title"] = "UpdateTransaction";
}

<form asp-controller="Transaction" asp-action="AddTransaction" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
    <div class="form-group row">
        <label asp-for="AccountSourceId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="AccountSourceId" asp-items="@Model.Accounts">
                <option>Please select account source</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AccountDestinationId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="AccountDestinationId" asp-items="@Model.Accounts">
                <option>Please select account destination</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Amount" class="form-contol" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input class="btn-success" type="submit" asp-controller="Transaction" asp-action="AddTransaction" value="Confirm" />
            <a asp-controller="Transaction" asp-action="GetAllTransactions" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
