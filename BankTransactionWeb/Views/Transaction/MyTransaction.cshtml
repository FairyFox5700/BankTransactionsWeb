@model List<TransactionDTO>
@{
    ViewData["Title"] = "My transactions";
      ViewBag.Index = 0;
}
<form asp-controller="Transaction" asp-action="MyTransaction" method="get">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-6">
                    <h6 class="m-0 font-weight-bold text-primary">My transactions</h6>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Any())
                {
                    <table class="table table-striped table-light">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Account Sorce</th>
                                <th scope="col">Account Destination</th>
                                <th scope="col">Date of transfering</th>
                                <th scope="col">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model)
                            {
                                <tr>
                                    <th scope="row">@(ViewBag.Index += 1))</th>
                                    <td>@transaction?.SourceAccountNumber </td>
                                    <td>@transaction?.DestinationAccountNumber</td>
                                    <td>@transaction?.DateOftransfering</td>
                                    <td>@transaction?.Amount </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="card">
                        <div class="card-header">
                            No transactions created yet
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    </form>
