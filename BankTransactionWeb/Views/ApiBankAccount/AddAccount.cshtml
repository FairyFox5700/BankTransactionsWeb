@model BankTransaction.Web.ViewModel.AddAccountViewModel
@{
    ViewData["Title"] = "AddAccount";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutDashboard.cshtml";
    }
}
    <head>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>


    </head>

    <form asp-controller="ApiBankAccount" asp-action="AddAccount" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
        <div class="form-group row ">
            <label class="col-sm-2 col-form-label">New account</label>
            <label class=" col-form-label">for @Model.Person?.Name @Model.Person?.LastName @Model.Person?.Surname</label>
            <input asp-for="PersonId" hidden />
        </div>
            <div class="form-group row ">
                <label asp-for="Number" class="col-sm-2 col-form-label"></label>
                <div class="form-group">
                    <input asp-for="Number" class="form-control" placeholder="Account number *" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row ">
                <label asp-for="Balance" class="col-sm-2 col-form-label"></label>
                <div class="form-group">
                    <input asp-for="Balance" class="form-control" placeholder="Balance *" value="" />
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <input class="btn btn-success" type="submit" asp-controller="ApiBankAccount" asp-action="AddAccount" value="Confirm" />
                    <a asp-controller="ApiBankAccount" asp-action="GetAllAccounts" class="btn btn-primary">Cancel</a>
                </div>
            </div>
    </form>

